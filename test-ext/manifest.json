{
  "manifest_version": 3,
  "name": "Custom Page Styler + AI",
  "version": "1.0",
  "description": "Style pages and talk to local AI",
  
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "permissions": ["storage", "scripting", "activeTab"],

  "host_permissions": [
    "http://127.0.0.1:11434/*"
  ],

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["fonts/*.ttf", "fonts/*.otf"],
      "matches": ["<all_urls>"]
    }
  ]
}
